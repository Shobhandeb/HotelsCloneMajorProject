<% layout("/layouts/boilerplate.ejs") %>
 <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"></script>

<style>
 .bodyContent {
  margin: 0;
  min-height: 100vh;       /* instead of fixed height */
  display: flex;
  justify-content: center;  
  align-items: center;      
  background: #f0f2f5;      
  padding: 20px;            /* ensures breathing space on mobile */
}

.form-container {
  background: #fff;
  padding: 30px 40px;
  border-radius: 12px;
  box-shadow: 0px 6px 20px rgba(0,0,0,0.15);
  width: 100%;              /* full width first */
        /* limit on large screens */
}

/* Headings */
.form-container h2 {
  text-align: center;
  margin-bottom: 25px;
  color: #007bff;
}

/* Inputs */
.form-group {
  margin-bottom: 18px;
}

.form-group label {
  display: block;
  margin-bottom: 6px;
  font-weight: 600;
  color: #333;
}

.form-group input,
.form-group textarea {
  width: 100%;
  padding: 12px;
  border: 1px solid #ddd;
  border-radius: 8px;
  font-size: 14px;
  transition: 0.3s ease;
}

.form-group input:focus,
.form-group textarea:focus {
  border-color: #007bff;
  outline: none;
  box-shadow: 0px 0px 6px rgba(0,123,255,0.4);
}

.form-group textarea {
  resize: vertical;
  min-height: 100px;
}

/* Button */
.btn-submit {
  display: block;
  width: 100%;
  padding: 12px;
  border: none;
  border-radius: 8px;
  background: #007bff;
  color: white;
  font-size: 16px;
  font-weight: 600;
  cursor: pointer;
  transition: all 0.3s ease;
}

.btn-submit:hover {
  background: #0056d2;
  transform: translateY(-2px);
  box-shadow: 0px 6px 14px rgba(0,0,0,0.2);
}

/* ✅ Mobile adjustments */
@media (max-width: 768px) {
  .form-container {
    padding: 20px; 
    max-width: 90%;   /* make it wider on tablets */
  }
}

@media (max-width: 480px) {
  .form-container {
    padding: 15px; 
    max-width: 100%;  /* almost full width on small phones */
  }
}
</style>
</head>
<body>
  <div class="form-container">
    <form method="post" action="/listings/<%=listing._id%>?_method=PUT" enctype="multipart/form-data">
      <h3>✏️ Edit Listing</h3>

      <div class="form-group">
        <label for="title">Title</label>
        <input id="title" name="listing[title]" value="<%=listing.title%>" type="text" required>
      </div>

      <div class="form-group">
        <label for="description">Description</label>
        <textarea id="description" name="listing[description]" required><%=listing.description%></textarea>
      </div>
        Original Listing image <br>
        <img src="<%=originalImageUrl%>" alt="" style="height: 200px;width: 200px;" />

   <div class="form-group">
          <label for="image">Upload Listing Image</label>
          <input id="image" name="listing[image]" placeholder="Enter image link" type="file">
        </div>


      <div class="form-group">
        <label for="price">Price (₹)</label>
        <input id="price" name="listing[price]" value="<%=listing.price%>" type="number" required>
      </div>

      <div class="form-group">
        <label for="country">Country</label>
        <input id="country" name="listing[country]" value="<%=listing.country%>" type="text" required>
      </div>

      <div class="form-group">
        <label for="location">Location</label>
        <input id="location" name="listing[location]" value="<%=listing.location%>" type="text" required>
      </div>

      <button type="submit" class="btn-submit">✅ Update Listing</button>
    </form>
  </div>
