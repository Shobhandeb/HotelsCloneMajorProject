<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">

<section class="modern-contact d-flex align-items-center justify-content-center py-5">
  <div class="glass-card text-center p-5">
    <div class="profile-img mb-4">
      <img src="https://i.ibb.co/s9m4gVyK/contactpage.jpg" alt="Shobhandeb Adak">
    </div>
    <h2 class="fw-bold mb-1">Shobhandeb Adak</h2>
    <p class="text-light-50 mb-3">3rd Year, Jalpaiguri Government Engineering College</p>

    <div class="d-flex justify-content-center gap-3 mb-4">
      <a href="mailto:sdadak02@gmail.com" class="contact-link">
        <i class="fa-solid fa-envelope"></i> sdadak02@gmail.com
