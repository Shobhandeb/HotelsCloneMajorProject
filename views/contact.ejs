<style>
  .modern-contact {
    background: radial-gradient(circle at top left, #00111f, #000);
    color: white;
    min-height: 100vh;
  }

  .glass-card {
    background: rgba(255, 255, 255, 0.08);
    border: 1px solid rgba(255, 255, 255, 0.2);
    border-radius: 20px;
    backdrop-filter: blur(12px);
    box-shadow: 0 0 25px rgba(0, 200, 255, 0.1);
    max-width: 420px;
    transition: 0.4s ease;
  }

  .glass-card:hover {
    transform: translateY(-8px);
    box-shadow: 0 0 40px rgba(0, 200, 255, 0.25);
  }

  .profile-img img {
    width: 130px;
    height: 130px;
    object-fit: cover;
    border-radius: 50%;
    border: 3px solid rgba(0, 200, 255, 0.5);
    box-shadow: 0 0 25px rgba(0, 200, 255, 0.2);
    transition: 0.4s ease;
  }

  .profile-img img:hover {
    transform: scale(1.07);
    box-shadow: 0 0 40px rgba(0, 200, 255, 0.35);
  }

  .contact-link {
    color: #00bfff;
    text-decoration: none;
    font-weight: 500;
    transition: 0.3s;
  }

  .contact-link:hover {
    color: #66e0ff;
  }

  .intro {
    color: #cbd5e1;
    font-size: 0.95rem;
  }

  .social-icons a {
    color: #00bfff;
    margin: 0 10px;
    font-size: 1.4rem;
    transition: 0.3s;
  }

  .social-icons a:hover {
    color: #66e0ff;
    transform: scale(1.2);
  }
</style>





